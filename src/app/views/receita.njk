{% extends 'layout.njk' %}
{% block search %}
{% include './search.njk' %}
{% endblock %}
{% block content %}
    <div class="informacao-receitas">
        <div class="receita-banner">
            <img src="{{recipe.img}}" alt="{{recipe.title}}">
        </div>
        <div class="info-receita">
            <h1>{{recipe.title}}</h1>
            <p>por
                {{recipe.chef}}</p>
        </div>
        <section class="ingredientes">
            <div>
                <h3>Ingredientes</h3>
                <a class="lista-ingredientes">Esconder</a>
            </div>
           
            <div id="lista-ingredientes">
            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
            </div>
            
        </section>
        <section class="preparo">
            <div>
                <h3>Modo de preparo</h3>
                <a  class="lista-preparo">Esconder</a>
            </div>
            <div id="lista-preparo">
            <ul>
                {% for preparation in recipe.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}
            </ul>
            </div>
        </section>
        <section class="info-adicionais">
            <div>
                <h3>Informações adicionais</h3>
                <a class="lista-info-adicionais">Esconder</a>
            </div>
            <div id="lista-info-adicionais">
                <p>
                    {{recipe.information}}
                </p>
            </div>            
        </section>
    </div>

{% endblock %}