{% extends 'layout.njk' %}

{% block search %}
{% include './search.njk' %}
{% endblock %}
{% block content %}

    <div class="principal">
        <div class="texto-receitas">
            <h1>As melhores receitas</h1>
            <div>
                <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro</p>
            </div>
        </div>
        <div>
            <img src="./img/chef.png" alt="Chef de cozinha">
        </div>
    </div>
    <h3 class="mais-acessadas">Mais acessadas</h3>
    <section class="pratos">
        {% for recipe in item %}
        <div class="prato" >
            <div class="container-img">
                <a href="/recipes/{{recipe.id}}">
                    <img src="{{recipe.img}}" alt="{{recipe.title}}">
                </a>
            </div>
            <div class="container-prato">
                <p>{{recipe.title}}</p>
            </div>
            <div class="container-chefe">
                <p>{{recipe.chef}}</p>
            </div>
        </div>
        {% endfor %}        
    </section>

{% endblock %}