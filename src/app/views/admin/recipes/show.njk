{% extends '../layout.njk' %}

{% block content %}
    <div class="form-create">
        <h3>Receita: {{recipe.title}}</h3>
        <button type="submit" class="btn-edit">
            <a href="/admin/recipes/{{recipe.id}}/edit">Editar Receita</a>
        </button>
    </div>
    <div class="details-receita">
        <div class="receita-banner">
            <img src="{{recipe.img}}" alt="{{item.title}}">
        </div>
        <div class="preview-recipe">
            {%for file in recipe.files%}
                <img class="imgRecipe {%if file.src == recipe.img%}bannerActive{%endif%}" src="{{file.src}}" >
            {%endfor%}
        </div>
        <div class="info-receita">
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.chef}}</p>
        </div>
        <section class="ingredientes">
            <div>
                <h3>Ingredientes</h3>
            </div>

            <div id="lista-ingredientes">
                <ul>
                    {% for ingrediente in recipe.ingredients %}
                        <li>{{ingrediente}}</li>
                    {% endfor %}
                </ul>
            </div>

        </section>
        <section class="preparo">
            <div>
                <h3>Modo de preparo</h3>
            </div>
            <div id="lista-preparo">
                <ul>
                    {% for preparo in recipe.preparation %}
                        <li>{{preparo}}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
        <section class="info-adicionais">
            <div>
                <h3>Informações adicionais</h3>
            </div>
            <div id="lista-info-adicionais">
                {%if recipe.information %}
                <p>
                    {{recipe.information}}
                </p>
                {% else %}
                <p>
                    Nenhuma informação adicional
                </p>
                {% endif %}
            </div>
        </section>
    </div>

{% endblock %}