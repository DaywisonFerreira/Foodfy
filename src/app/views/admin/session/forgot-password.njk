{% extends './layout.njk' %}

{%block content%}
    <div class="info-sessao">
        <h3>Esqueceu a Senha?</h3>
    </div>
    <div class="container">
        <form method="POST" class="form-login" action="/admin/forgot-password">

            <div class="fields">
                <div>
                    <h4>Email</h4>
                    <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email para recuperar a senha" onblur="Validate.apply(this, 'isEmail')">
                </div>
            </div>
            <div class="footer">
                <div class="btn-recuperar">
                    <button class="button" type="submit">Recuperar</button>
                </div>
            </div>
        </form>

    </div>

{%endblock content%}