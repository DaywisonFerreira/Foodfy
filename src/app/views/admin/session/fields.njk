<div>
    <div>
        <h4>Email</h4>
        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" class="{% if error %}error-input{%endif%}" onblur="Validate.apply(this, 'isEmail')">
    </div>

    <div>
        <h4>Senha</h4>
        <input type="password" name="password" placeholder="Digite sua senha" class="{% if error %}error-input{%endif%}">
    </div>
</div>