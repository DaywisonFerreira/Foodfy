{% extends './layout.njk' %}

{%block content%}
    <div class="info-sessao">
        <h3>Nova Senha</h3>
    </div>
    <div class="container">
        <form method="POST" class="form-login" action="/admin/password-reset">

            <div class="fields">
                <div>
                    <div>
                        <h4>Email</h4>
                        <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')">
                    </div>

                    <div>
                        <h4>Nova Senha</h4>
                        <input type="password" name="password" placeholder="Digite sua nova senha">
                    </div>

                    <div>
                        <h4>Repetir Senha</h4>
                        <input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
                    </div>
                </div>
            </div>
            <input type="hidden" name="token" value="{{token}}">
            <div class="footer">
                <div class="btn-nova-senha">
                    <button class="button" type="submit">Nova senha</button>
                </div>
            </div>
        </form>

    </div>

{%endblock content%}