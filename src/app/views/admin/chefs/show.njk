{% extends '../layout.njk' %}

{% block content %}
    <div class="form-create">
        <h3>Chef: {{chef.name}}</h3>
        {%if session.user.is_admin %}
        <button type="submit" class="btn-edit">
            <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        </button>
        {%endif%}
    </div>
    <div class="details-chef">
        <div class="chef-avatar">
            <img src="{{chef.img}}" >
        </div>
        <div class="info-chef">
            <h1>{{chef.name}}</h1>
            {% if chef.total_recipes < 2 %}
                <p>{{chef.total_recipes}}
                    receita</p>
            {% else %}
                <p>{{chef.total_recipes}}
                    receitas</p>
            {% endif %}
        </div>
    </div>

    <h2 class="txt-recipe-show">Receitas</h2>   

    {% if chef.total_recipes > 0 %}
    <div class="lista-receitas-admin">
        {% for recipe in chef.recipes %}
        <div class="receita-admin">
            <div>
                <img src="{{recipe.img}}" alt="">
            </div>
            <div class="info-receitas">
                <h4>{{recipe.title}}</h4>
                <p>{{chef.name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
        <p>Sem nenhuma receita</p>
    {% endif %}

{% endblock %}