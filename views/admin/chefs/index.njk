{% extends '../layout.njk' %}

{% block content %}
    <div class="gerenciar">    
        <h3 class="txt-gerenciar-chef">Gerenciar chefs</h3>
        <button><a href="/admin/chefs/create">Adicionar chef</a></button>
    </div>
    <div class="lista-chefs">
        {% for chef in chefs  %}
        <div class="chefs-admin">
            <div>
                <img src="{{chef.avatar_url}}" alt="">
            </div>
            <div class="info-chef">
                <h4>{{chef.name}}</h4>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}